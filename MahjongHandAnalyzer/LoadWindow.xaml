<Window x:Class="MahjongHandAnalyzer.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MahjongHandAnalyzer" Closing="Window_Closing"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        Title="Loading...">
    <DockPanel Margin="5">
        <ProgressBar Name="PgbLoading" DockPanel.Dock="Top" Height="25" Width="300" Minimum="0" Maximum="100" />
        <TextBlock Name="TxbWaitWarning" Margin="0, 5, 0, 0" DockPanel.Dock="Bottom" Text="Please be patient. This operation can't be cancelled." />
    </DockPanel>
</Window>
