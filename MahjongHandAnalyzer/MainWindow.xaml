        </Grid>
        <DockPanel DockPanel.Dock="Bottom">
            <DockPanel DockPanel.Dock="Top">
                <GroupBox Padding="5" Name="GrbYakus" Header="Yakus">
                    <StackPanel Orientation="Vertical" Name="StpYakus" />
                </GroupBox>
            </DockPanel>
            <DockPanel DockPanel.Dock="Bottom"  Height="30">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Height="25" Name="BtnRandomize" Content="Randomize" Width="75" Click="BtnRandomize_Click" />
                    <Button Height="25" Name="BtnClear" Content="Clear" Width="75" Click="BtnClear_Click" Margin="10, 0, 0, 0" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Vent dominant :" Height="25" />
                    <ComboBox Height="25" Name="CbbWindDominant" Width="75" VerticalContentAlignment="Center" />
                    <Label Content="Vent du tour :" Height="25" />
                    <ComboBox Height="25" Name="CbbWindTurn" Width="75" VerticalContentAlignment="Center" />
                    <Button Margin="10, 0, 0, 0" Height="25" Name="BtnAnalyze" Content="Analyze" Width="75" Click="BtnAnalyze_Click" />
                </StackPanel>
            </DockPanel>
