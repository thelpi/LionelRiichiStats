                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>
            <ComboBox Name="CbbTile01" Grid.Column="00" Grid.Row="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Graphic, Converter={StaticResource ResourceKey=bitmapConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox Name="CbbTile02" Grid.Column="01" Grid.Row="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Path=Graphic, Converter={StaticResource ResourceKey=bitmapConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
